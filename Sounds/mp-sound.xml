<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <fx>
  	<starter>
			<name>starter0_start</name>
			<mode>once</mode>
			<path>Aircraft/Bell_UH-1H/Sounds/fguk/startup_exterior.wav</path>
			<condition>
				<property>engines/engine[0]/running</property>
			</condition>
			<volume>
				<factor>0.7</factor>
			</volume>
			<volume>
				<property>/sound/view-level-outside</property>
			</volume>
		</starter>
		
		 <rotor>
            <name>rotor</name>
            <mode>looped</mode>
            <path>Aircraft/Bell_UH-1H/Sounds/engine1.wav</path>
            <condition>
                <and>
                    <greater-than>
                        <property>rotors/main/rpm</property>
                        <value>50</value>
                    </greater-than>
                    <not>
                        <property>sim/crashed</property>
                    </not>
				<not>
					<property>sim/current-view/internal</property>
				</not>
                </and>
            </condition>
            <volume>
       		 <factor>0.5</factor>
            </volume>
            <pitch>
                <property>rotors/main/rpm</property>
                <factor>0.003125</factor>
                <offset>-0.0</offset>
                <max>2.5</max>
            </pitch>
            <position>
                <x> -4.9 </x>
                <y> 0 </y>
                <z> 1.5 </z>
            </position>
            <reference-dist>500</reference-dist>
            <max-dist>5000</max-dist>
        </rotor>

        <rotor>
            <name>tail_rotor</name>
            <mode>looped</mode>
            <path>Aircraft/Bell_UH-1H/Sounds/engine2.wav</path>
            <condition>
                <and>
                    <greater-than>
                        <property>rotors/main/rpm</property>
                        <value>50</value>
                    </greater-than>
                    <not>
                        <property>sim/crashed</property>
                    </not>
			<not>
			<property>sim/current-view/internal</property>
			</not>
                </and>
            </condition>
            <volume>
                <factor>0.8</factor>
            </volume>
            <pitch>
                <property>rotors/tail/rpm</property>
                <factor>0.0006</factor>
                <offset>-0.0</offset>
                <max>2.5</max>
            </pitch>
            <position>
                <x> -2 </x>
                <y> -0.4 </y>
                <z> 1.3 </z>
            </position>
            <orientation>
                <x> 1 </x>
                <y> . </y>
                <z> 0 </z>
                <inner-angle>110</inner-angle>
                <outer-angle>220</outer-angle>
                <outer-gain>0.1</outer-gain>
            </orientation>
            <reference-dist>500</reference-dist>
            <max-dist>5000</max-dist>
        </rotor>

        <engine>
            <name>engine</name>
            <mode>looped</mode>
            <path>Aircraft/Bell_UH-1H/Sounds/jet1.wav</path>
            <condition>
                <and>
                    <greater-than>
                        <property>rotors/main/rpm</property>
                        <value>50</value>
                    </greater-than>
                    <greater-than>
                        <property>/controls/engines/engine[0]/power</property>
                        <value>0.13</value>
                    </greater-than>
                    <not>
                        <property>sim/crashed</property>
                    </not>
		    <not>
			<property>sim/current-view/internal</property>
		    </not>
                </and>
            </condition>
            <volume>
                <property>rotors/gear/torque-sound-filtered</property>
                <factor>0.9</factor>
            </volume>
            <pitch>
                <property>rotors/main/rpm</property>
                <factor>0.003125</factor>
                <offset>-0.0</offset>
                <max>1.03</max>
            </pitch>
            <position>
                <x> -2.5 </x>
                <y> 0 </y>
                <z> 0.4 </z>
            </position>
            <orientation>
                <x> 1 </x>
                <y> 0 </y>
                <z> .2 </z>
                <inner-angle>50</inner-angle>
                <outer-angle>80</outer-angle>
                <outer-gain>0.2</outer-gain>
            </orientation>
            <reference-dist>500</reference-dist>
            <max-dist>4000</max-dist>
        </engine>
		
		 <rotor>
            <name>tail_rotor</name>
            <mode>looped</mode>
            <path>Aircraft/ec145/Sounds/tailrotor.wav</path>
            <condition>
                <and>
                    <greater-than>
                        <property>rotors/main/rpm</property>
                        <value>50</value>
                    </greater-than>
                    <not>
                        <property>sim/crashed</property>
                    </not>
			<not>
			<property>sim/current-view/internal</property>
			</not>
                </and>
            </condition>
            <volume>
                <factor>0.8</factor>
            </volume>
            <pitch>
                <property>rotors/tail/rpm</property>
                <factor>0.0006</factor>
                <offset>-0.0</offset>
                <max>2.5</max>
            </pitch>
            <position>
                <x> -2 </x>
                <y> -0.4 </y>
                <z> 1.3 </z>
            </position>
            <orientation>
                <x> 1 </x>
                <y> . </y>
                <z> 0 </z>
                <inner-angle>110</inner-angle>
                <outer-angle>220</outer-angle>
                <outer-gain>0.1</outer-gain>
            </orientation>
            <reference-dist>500</reference-dist>
            <max-dist>5000</max-dist>
        </rotor>
		
