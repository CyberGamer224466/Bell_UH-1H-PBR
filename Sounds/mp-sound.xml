	 <!-- rockets away -->
    <guns>
      <name>Rockets1</name>
      <path>Aircraft/Bell_UH-1H/Sounds/Missile.wav</path>
      <mode>once</mode>
      <condition>
         <property>controls/armament/rocket1-fire</property>
         <property>ai/submodels/submodel/count</property>
      </condition>
    </guns>
	
	<guns>
      <name>Rockets2</name>
      <path>Aircraft/Bell_UH-1H/Sounds/Missile.wav</path>
      <mode>once</mode>
      <condition>
         <property>controls/armament/rocket2-fire</property>
         <property>ai/submodels/submodel/count</property>
      </condition>
    </guns>
	

	<rotor>
			<name>blade-vortex-interaction-G</name>
			<mode>looped</mode>
			 <path>Aircraft/Bell_UH-1H/Sounds/XUH2.wav</path>
			<condition>
           <and>
				<greater-than>
					<property>sim/multiplay/generic/float[15]</property>
					<value>1.4</value>
				</greater-than>
				  <not>
			<property>sim/current-view/internal</property>
		    </not>
				
			</and>	
						
			</condition>
			<volume>
				<property>sim/multiplay/generic/float[15]</property>
				<factor>0.008</factor>
    	            <offset>0.25</offset>
	                <min>0.0</min>
	                <max>1.0</max>
			</volume>
			<volume>
				<property>rotors/main/rpm</property>
				<factor>0.001</factor>
    	            <offset>0.25</offset>
	                <min>0.0</min>
	                <max>1.0</max>
			</volume>
			<pitch>
				<property>rotors/main/rpm</property>
				<factor>0.003262</factor>
				<offset>0</offset>
				<min>0.</min>
				<max>1.5</max>
			</pitch>
			
			<max-dist>3000</max-dist>
		</rotor>	
		
		
			<rotor>
			<name>blade-vortex-interaction-G-inside</name>
			<mode>looped</mode>
			 <path>Aircraft/Bell_UH-1H/Sounds/XUH3.wav</path>
			<condition>
           <and>
				<greater-than>
					<property>sim/multiplay/generic/float[15]</property>
					<value>1.4</value>
				</greater-than>
				 
			<property>sim/current-view/internal</property>
		    
				
			</and>	
						
			</condition>
			<volume>
				<property>accelerations/pilot-g</property>
				<factor>0.0001</factor>
    	<offset>0.25</offset>
	<min>0.0</min>
	<max>1.0</max>
			</volume>
			<pitch>
				<property>rotors/main/rpm</property>
				<factor>0.003262</factor>
				<offset>0</offset>
				<min>0.</min>
				<max>1.5</max>
			</pitch>
			
			<max-dist>30</max-dist>
		</rotor>
		
    </fx>

</PropertyList>
